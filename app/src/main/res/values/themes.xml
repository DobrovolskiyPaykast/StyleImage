<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StyleImage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#6750A4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#6b5b89</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DatePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/DatePicker</item>
        <item name="android:background">#6b5b89</item>
    </style>

    <style name="DatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:background">#6b5b89</item>
    </style>

    <style name="TimePickerStyle" parent="android:Theme.Material.Dialog">
        <item name="android:timePickerStyle">@style/TimePicker</item>
        <item name="android:background">#6b5b89</item>
    </style>

    <style name="TimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="android:background">#6b5b89</item>
    </style>

</resources>